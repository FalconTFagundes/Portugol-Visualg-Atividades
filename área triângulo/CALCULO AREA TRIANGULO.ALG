Algoritmo "calculo triangulo"
Var
	b, h, a:real
Inicio
	escreval("Digite a Base(B)")
	leia (b)
	escreval("A base de seu triângulo é: ", b)
	escreval("Digite a Altura (h)")
	leia (h)
	escreval("A altura de seu triângulo é ", h)
	a <- (B*h)/2
	escreval("Esta é a área de seu triângulo", a)
fimalgoritmo
